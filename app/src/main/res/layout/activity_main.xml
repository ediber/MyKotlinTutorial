<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            tools:layout_editor_absoluteY="128dp" tools:layout_editor_absoluteX="156dp"/>
    <Button
            android:text="Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="@+id/button"
    />
    <Button
            android:text="OOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oop" app:layout_constraintStart_toStartOf="@+id/button2"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/button2"/>

</android.support.constraint.ConstraintLayout>